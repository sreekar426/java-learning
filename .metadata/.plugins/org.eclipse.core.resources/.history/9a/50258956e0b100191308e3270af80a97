package com.mindtree.dao.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.mindtree.dao.IDescriptionDao;
import com.mindtree.entity.DescriptionEntity;
import com.mindtree.exception.TaxException;
import com.mindtree.repository.DescriptionRepository;

/**
 * The Class DescriptionDaoImpl.
 */
@Repository
public class DescriptionDaoImpl implements IDescriptionDao {

	/** The description repository. */
	@Autowired
	DescriptionRepository descriptionRepository;

	/*
	 * (non-Javadoc)
	 * 
	 * @see com.mindtree.dao.IDescriptionDao#getDescType(java.lang.String, int)
	 */
	@Override
	public DescriptionEntity getDesc(String descType, int zoneId) throws TaxException {
		DescriptionEntity descriptionEntity = null;
		try {
			descriptionEntity = descriptionRepository.findByDescTypeAndZoneZoneId(descType, zoneId);
		} catch (DataAccessException exTaxException) {
			throw new TaxException(exTaxException);
		}
		return descriptionEntity;

	}

}
