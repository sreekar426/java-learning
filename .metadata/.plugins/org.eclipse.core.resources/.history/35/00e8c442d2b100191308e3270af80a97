package com.mindtree.dao.impl;

import org.springframework.beans.factory.annotation.Autowired;

import com.mindtree.dao.IDescriptionDao;
import com.mindtree.entity.DescriptionEntity;
import com.mindtree.repository.DescriptionRepository;

/**
 * The Class DescriptionDaoImpl.
 */
public class DescriptionDaoImpl implements IDescriptionDao {

	/** The description repository. */
	@Autowired
	DescriptionRepository descriptionRepository;

	/* (non-Javadoc)
	 * @see com.mindtree.dao.IDescriptionDao#getDescType(java.lang.String, int)
	 */
	@Override
	public DescriptionEntity getDescType(String descType, int zoneId) {
		return descriptionRepository.findByDescTypeAndZoneZoneId(descType, zoneId);
	}

}
