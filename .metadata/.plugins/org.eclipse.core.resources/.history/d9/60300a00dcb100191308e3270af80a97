package com.mindtree.dao;

import java.util.List;

import org.springframework.stereotype.Service;

import com.mindtree.entity.ZoneTypeEntity;

/**
 * The Interface IZoneDao.
 */
@Service
public interface IZoneDao {

	/**
	 * Gets the all zone type.
	 *
	 * @return the all zone type
	 */
	List<ZoneTypeEntity> getAllZones();

	/**
	 * Gets the zone type.
	 *
	 * @param zoneId the zone id
	 * @return the zone type
	 */
	ZoneTypeEntity getIndividualZone(String zoneId);

	/**
	 * Save zone details.
	 *
	 * @param zone the zone
	 */
	void saveZone(ZoneTypeEntity zone);

}
