package com.mindtree.service.impl;

import org.springframework.beans.factory.annotation.Autowired;

import com.mindtree.entity.PropertyEntity;
import com.mindtree.repository.PropertyRepository;
import com.mindtree.service.IPropertyService;

public class PropertyServiceImpl implements IPropertyService {

	@Autowired
	private PropertyRepository propertyRepository;

	/* (non-Javadoc)
	 * @see com.mindtree.service.IPropertyService#getPropertyDetails(int, java.lang.String)
	 */
	@Override
	public PropertyEntity getPropertyDetails(int descId, String status) {

		return propertyRepository.findByDescriptionDescIdAndStatus(descId, status);
	}

}
