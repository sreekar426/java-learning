package com.mindtree.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.mindtree.dao.IZoneDao;
import com.mindtree.entity.ZoneTypeEntity;
import com.mindtree.service.IZoneService;

/**
 * The Class ZoneServiceImpl.
 */
@Service
public class ZoneServiceImpl implements IZoneService {

	
	/** The zone dao. */
	@Autowired
	IZoneDao zoneDao;

	/*
	 * (non-Javadoc)
	 * 
	 * @see com.mindtree.service.IZoneService#getAllZoneType()
	 */
	@Override
	public List<ZoneTypeEntity> getAllZoneType() {

		return zoneDao.getAllZones();
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see com.mindtree.service.IZoneService#getZoneType(java.lang.String)
	 */
	@Override
	public ZoneTypeEntity getZoneType(String zoneId) {

		return zoneDao.getIndividualZone(zoneId);
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see com.mindtree.service.IZoneService#saveZoneDetails(com.mindtree.entity.
	 * ZoneTypeEntity)
	 */
	@Override
	public void saveZoneDetails(ZoneTypeEntity zone) {
		zoneDao.saveZone(zone);

	}

}
